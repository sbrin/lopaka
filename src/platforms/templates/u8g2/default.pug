| u8g2.setFontMode(1);
| u8g2.setBitmapMode(1);
|
each decl in declarations 
    | !{decl}
    |
|
if settings.wrap
    | void draw(void) {
each layer in layers 
    case layer.type
        when 'dot'
            | u8g2.drawPixel(!{layer.x}, !{layer.y});
        when 'line'
            | u8g2.drawLine(!{layer.x1}, !{layer.y1}, !{layer.x2}, !{layer.y2});
        when 'rect'
            - var func = layer.fill ? 'drawBox' : 'drawFrame'
            | u8g2.!{func}(!{layer.x}, !{layer.y}, !{layer.w}, !{layer.h});
        when 'circle'
            - var func = layer.fill ? 'drawDisc' : 'drawCircle'
            | u8g2.!{func}(!{layer.x}, !{layer.y}, !{layer.r});
        when 'ellipse'
            - var func = layer.fill ? 'drawEllipse' : 'drawCircle'
            | u8g2.!{func}(!{layer.x}, !{layer.y}, !{layer.rx}, !{layer.ry});
        when 'string'
            | u8g2.setFont(u8g2_font_!{layer.font});
            | u8g2.drawStr(!{layer.x}, !{layer.y}, "!{layer.text}");
        when 'paint'
        when 'icon'
            | u8g2.drawXBM(!{layer.x}, !{layer.y}, !{layer.w}, !{layer.h}, !{layer.imageName});
        default 
            |
            | // Unknown layer type !{layer.type}
            |
    |
    |
if settings.wrap
    | }